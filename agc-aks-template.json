{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "aksClusterName": {
      "type": "string",
      "defaultValue": "aks-agc-cluster",
      "metadata": {
        "description": "Name of the AKS cluster"
      }
    },
    "kubernetesVersion": {
      "type": "string",
      "defaultValue": "1.31.13",
      "metadata": {
        "description": "Kubernetes version"
      }
    },
    "nodeCount": {
      "type": "int",
      "defaultValue": 3,
      "minValue": 1,
      "maxValue": 50,
      "metadata": {
        "description": "Number of nodes in the AKS cluster"
      }
    },
    "nodeVMSize": {
      "type": "string",
      "defaultValue": "Standard_DS2_v2",
      "metadata": {
        "description": "VM size for AKS nodes"
      }
    },
    "vnetName": {
      "type": "string",
      "defaultValue": "vnet-aks-agc",
      "metadata": {
        "description": "Virtual Network name"
      }
    },
    "vnetAddressPrefix": {
      "type": "string",
      "defaultValue": "10.0.0.0/16",
      "metadata": {
        "description": "Virtual Network address prefix"
      }
    },
    "aksSubnetName": {
      "type": "string",
      "defaultValue": "subnet-aks",
      "metadata": {
        "description": "AKS subnet name"
      }
    },
    "aksSubnetPrefix": {
      "type": "string",
      "defaultValue": "10.0.1.0/24",
      "metadata": {
        "description": "AKS subnet address prefix"
      }
    },
    "appGwSubnetName": {
      "type": "string",
      "defaultValue": "subnet-appgw",
      "metadata": {
        "description": "Application Gateway subnet name"
      }
    },
    "appGwSubnetPrefix": {
      "type": "string",
      "defaultValue": "10.0.2.0/24",
      "metadata": {
        "description": "Application Gateway subnet address prefix"
      }
    },
    "applicationGatewayName": {
      "type": "string",
      "defaultValue": "appgw-containers",
      "metadata": {
        "description": "Application Gateway for Containers name"
      }
    },
    "publicIpName": {
      "type": "string",
      "defaultValue": "pip-appgw",
      "metadata": {
        "description": "Public IP name for Application Gateway"
      }
    },
    "enableAlb": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Enable Application Gateway Ingress Controller (AGIC)"
      }
    }
  },
  "variables": {
    "managedIdentityName": "[concat('id-', parameters('aksClusterName'))]",
    "applicationGatewayIdentityName": "[concat('id-', parameters('applicationGatewayName'))]",
    "networkContributorRoleId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', '4d97b98b-1d4f-4787-a291-c67834d212e7')]",
    "managedIdentityOperatorRoleId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', 'f1a07417-d97a-45cb-824c-7a7467783830')]",
    "readerRoleId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', 'acdd72a7-3385-48ef-bd42-f606fba81ae7')]",
    "contributorRoleId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', 'b24988ac-6180-42a0-ab88-20f7382dd24c')]"
  },
  "resources": [
    {
      "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
      "apiVersion": "2023-01-31",
      "name": "[variables('managedIdentityName')]",
      "location": "[parameters('location')]"
    },
    {
      "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
      "apiVersion": "2023-01-31",
      "name": "[variables('applicationGatewayIdentityName')]",
      "location": "[parameters('location')]"
    },
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2023-05-01",
      "name": "[parameters('vnetName')]",
      "location": "[parameters('location')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('vnetAddressPrefix')]"
          ]
        }
      }
    },
    {
      "type": "Microsoft.Network/virtualNetworks/subnets",
      "apiVersion": "2023-05-01",
      "name": "[concat(parameters('vnetName'), '/', parameters('aksSubnetName'))]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]"
      ],
      "properties": {
        "addressPrefix": "[parameters('aksSubnetPrefix')]",
        "privateEndpointNetworkPolicies": "Disabled",
        "privateLinkServiceNetworkPolicies": "Enabled"
      }
    },
    {
      "type": "Microsoft.Network/virtualNetworks/subnets",
      "apiVersion": "2023-05-01",
      "name": "[concat(parameters('vnetName'), '/', parameters('appGwSubnetName'))]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]",
        "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('aksSubnetName'))]"
      ],
      "properties": {
        "addressPrefix": "[parameters('appGwSubnetPrefix')]",
        "delegations": [
          {
            "name": "Microsoft.ServiceNetworking.trafficControllers",
            "properties": {
              "serviceName": "Microsoft.ServiceNetworking/trafficControllers"
            }
          }
        ],
        "privateEndpointNetworkPolicies": "Disabled",
        "privateLinkServiceNetworkPolicies": "Enabled"
      }
    },
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2023-05-01",
      "name": "[parameters('publicIpName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard"
      },
      "properties": {
        "publicIPAllocationMethod": "Static",
        "publicIPAddressVersion": "IPv4"
      }
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2022-04-01",
      "name": "[guid(resourceGroup().id, variables('managedIdentityName'), 'NetworkContributor')]",
      "dependsOn": [
        "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]",
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]"
      ],
      "properties": {
        "roleDefinitionId": "[variables('networkContributorRoleId')]",
        "principalId": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName')), '2023-01-31').principalId]",
        "principalType": "ServicePrincipal",
        "scope": "[resourceGroup().id]"
      }
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2022-04-01",
      "name": "[guid(resourceGroup().id, variables('applicationGatewayIdentityName'), 'NetworkContributor')]",
      "dependsOn": [
        "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('applicationGatewayIdentityName'))]",
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]"
      ],
      "properties": {
        "roleDefinitionId": "[variables('networkContributorRoleId')]",
        "principalId": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('applicationGatewayIdentityName')), '2023-01-31').principalId]",
        "principalType": "ServicePrincipal",
        "scope": "[resourceGroup().id]"
      }
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2022-04-01",
      "name": "[guid(resourceGroup().id, variables('managedIdentityName'), 'ManagedIdentityOperator')]",
      "dependsOn": [
        "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]"
      ],
      "properties": {
        "roleDefinitionId": "[variables('managedIdentityOperatorRoleId')]",
        "principalId": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName')), '2023-01-31').principalId]",
        "principalType": "ServicePrincipal",
        "scope": "[resourceGroup().id]"
      }
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2022-04-01",
      "name": "[guid(resourceGroup().id, variables('managedIdentityName'), 'AppGwContributor')]",
      "dependsOn": [
        "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]"
      ],
      "properties": {
        "roleDefinitionId": "[variables('contributorRoleId')]",
        "principalId": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName')), '2023-01-31').principalId]",
        "principalType": "ServicePrincipal",
        "scope": "[resourceGroup().id]"
      }
    },
    {
      "type": "Microsoft.ContainerService/managedClusters",
      "apiVersion": "2024-02-01",
      "name": "[parameters('aksClusterName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]",
        "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('aksSubnetName'))]",
        "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]",
        "[guid(resourceGroup().id, variables('managedIdentityName'), 'NetworkContributor')]",
        "[guid(resourceGroup().id, variables('managedIdentityName'), 'ManagedIdentityOperator')]",
        "[guid(resourceGroup().id, variables('applicationGatewayIdentityName'), 'NetworkContributor')]"
      ],
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]": {}
        }
      },
      "properties": {
        "kubernetesVersion": "[parameters('kubernetesVersion')]",
        "dnsPrefix": "[parameters('aksClusterName')]",
        "enableRBAC": true,
        "agentPoolProfiles": [
          {
            "name": "systempool",
            "count": "[parameters('nodeCount')]",
            "vmSize": "[parameters('nodeVMSize')]",
            "mode": "System",
            "osType": "Linux",
            "type": "VirtualMachineScaleSets",
            "vnetSubnetID": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('aksSubnetName'))]",
            "enableAutoScaling": true,
            "minCount": 1,
            "maxCount": 5,
            "maxPods": 30
          }
        ],
        "networkProfile": {
          "networkPlugin": "azure",
          "networkPolicy": "azure",
          "serviceCidr": "10.2.0.0/16",
          "dnsServiceIP": "10.2.0.10",
          "loadBalancerSku": "standard"
        },
        "addonProfiles": {
          "azureKeyvaultSecretsProvider": {
            "enabled": true
          },
          "omsAgent": {
            "enabled": false
          }
        },
        "identityProfile": {
          "kubeletidentity": {
            "resourceId": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]",
            "clientId": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName')), '2023-01-31').clientId]",
            "objectId": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName')), '2023-01-31').principalId]"
          }
        }
      }
    },
    {
      "type": "Microsoft.ServiceNetworking/trafficControllers",
      "apiVersion": "2023-11-01",
      "name": "[parameters('applicationGatewayName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]",
        "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('aksSubnetName'))]",
        "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('appGwSubnetName'))]",
        "[resourceId('Microsoft.ContainerService/managedClusters', parameters('aksClusterName'))]",
        "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('applicationGatewayIdentityName'))]"
      ],
      "properties": {}
    },
    {
      "type": "Microsoft.ServiceNetworking/trafficControllers/frontends",
      "apiVersion": "2023-11-01",
      "name": "[concat(parameters('applicationGatewayName'), '/frontend')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.ServiceNetworking/trafficControllers', parameters('applicationGatewayName'))]",
        "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('appGwSubnetName'))]"
      ],
      "properties": {}
    },
    {
      "type": "Microsoft.ServiceNetworking/trafficControllers/associations",
      "apiVersion": "2023-11-01",
      "name": "[concat(parameters('applicationGatewayName'), '/aks-association')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.ServiceNetworking/trafficControllers', parameters('applicationGatewayName'))]",
        "[resourceId('Microsoft.ContainerService/managedClusters', parameters('aksClusterName'))]",
        "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('appGwSubnetName'))]"
      ],
      "properties": {
        "associationType": "subnets",
        "subnet": {
          "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('appGwSubnetName'))]"
        }
      }
    }
  ],
  "outputs": {
    "aksClusterName": {
      "type": "string",
      "value": "[parameters('aksClusterName')]"
    },
    "aksResourceId": {
      "type": "string",
      "value": "[resourceId('Microsoft.ContainerService/managedClusters', parameters('aksClusterName'))]"
    },
    "applicationGatewayName": {
      "type": "string",
      "value": "[parameters('applicationGatewayName')]"
    },
    "applicationGatewayResourceId": {
      "type": "string",
      "value": "[resourceId('Microsoft.ServiceNetworking/trafficControllers', parameters('applicationGatewayName'))]"
    },
    "vnetName": {
      "type": "string",
      "value": "[parameters('vnetName')]"
    },
    "publicIpAddress": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses', parameters('publicIpName')), '2023-05-01').ipAddress]"
    },
    "managedIdentityClientId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName')), '2023-01-31').clientId]"
    },
    "applicationGatewayIdentityClientId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('applicationGatewayIdentityName')), '2023-01-31').clientId]"
    },
    "albAssociationId": {
      "type": "string",
      "value": "[resourceId('Microsoft.ServiceNetworking/trafficControllers/associations', parameters('applicationGatewayName'), 'aks-association')]"
    },
    "albFrontendId": {
      "type": "string",
      "value": "[resourceId('Microsoft.ServiceNetworking/trafficControllers/frontends', parameters('applicationGatewayName'), 'frontend')]"
    },
    "deploymentInstructions": {
      "type": "string",
      "value": "Run: az aks get-credentials --resource-group rg-aks-agc-demo --name aks-agc-demo && kubectl apply -f sample-app.yaml"
    }
  }
}
